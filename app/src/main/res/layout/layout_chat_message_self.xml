<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <TextView
        android:textSize="12sp"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:background="#cccccc"
        android:id="@+id/chat_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1月1日 00:00" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/chat_send_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/item2"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/chat_send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/chat_send_photo"
            android:background="@mipmap/chat_message_text_self"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="内容" />
    </RelativeLayout>

</LinearLayout>