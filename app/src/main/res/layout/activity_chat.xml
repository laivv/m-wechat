<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.lingluo.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="标题"
        app:titleLeftBtnIcon="@mipmap/bar_back"
        app:titleRightBtnIcon="@mipmap/chat_item_people"
        android:id="@+id/title_bar_1"
       >

    </com.example.lingluo.view.TitleBar>

        <ListView
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chat_message_listview"
            android:listSelector="@android:color/transparent"
            >

        </ListView>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:padding="5dp"
    android:background="@drawable/border_top"
    android:focusable="true"
    android:focusableInTouchMode="true"

    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:src="@mipmap/btn_chat_voice"
        android:id="@+id/btn_chat_converter"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="105dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/border_bottom"
        android:id="@+id/chat_edit_text"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/border"
        android:id="@+id/btn_record_voice"
        android:text="按住  说话"
        android:textColor="#666666"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="gone"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_gravity="center_vertical|right"
        android:background="#00000000"
        android:src="@mipmap/btn_chat_biaoqing"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#09BB07"
        android:textColor="#ffffff"
        android:id="@+id/btn_send_message"
        android:visibility="gone"
        android:text="发送"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#00000000"
        android:src="@mipmap/btn_chat_add"

        android:id="@+id/btn_add_picture"
        />
</FrameLayout>



</FrameLayout>
