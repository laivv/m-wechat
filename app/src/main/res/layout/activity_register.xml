<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="form" type="com.example.lingluo.model.RegisterForm" />
    </data>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:background="@drawable/edit_bg_style"
        android:ems="10"
        android:hint="输入账号"
        android:layout_marginBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:selectAllOnFocus="false"
        android:text="@={form.userName}" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:height="40dp"
        android:background="@drawable/edit_bg_style"
        android:ems="10"
        android:hint="输入密码"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:selectAllOnFocus="false"
        android:text="@={form.passWord}" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:height="40dp"
        android:background="@drawable/edit_bg_style"
        android:ems="10"
        android:hint="确认密码"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:selectAllOnFocus="false"
        android:text="@={form.rePassWord}" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:background="#3EB94E"
        android:elevation="0dp"
        android:onClick="onClick"
        android:text="注册"
        android:textColor="@android:color/background_light"
        android:id="@+id/btn_register"
        ></Button>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账号？ 去登录"
        android:textColor="#20a0ff"
        android:onClick="onClick"
        android:id="@+id/btn_go_login"
        />

</LinearLayout>
</layout>

